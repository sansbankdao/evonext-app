{
    "$format_version": "0",
    "$schema": "https://schema.dash.org/dpp-0-4-0/meta/data-contract",
    "version": 1,
    "ownerId": "{{ownerId}}",
    "documents": {
        "profile": {
            "type": "object",
            "description": "User profile information",
            "indices": [
                {
                    "name": "owner",
                    "properties": [
                        {
                            "$ownerId": "asc"
                        }
                    ],
                    "unique": true
                }
            ],
            "properties": {
                "bio": {
                    "type": "string",
                    "position": 0,
                    "description": "User biography",
                    "maxLength": 160
                }
            },
            "required": [],
            "additionalProperties": false
        },
        "post": {
            "type": "object",
            "description": "A post in the social network",
            "indices": [
                {
                    "name": "ownerAndTime",
                    "properties": [
                        {
                            "$ownerId": "asc"
                        },
                        {
                            "$createdAt": "asc"
                        }
                    ]
                }
            ],
            "properties": {
                "content": {
                    "type": "string",
                    "description": "Post content",
                    "minLength": 1,
                    "maxLength": 500,
                    "position": 0
                }
            },
            "required": [
                "content"
            ],
            "additionalProperties": false
        }
    }
}
