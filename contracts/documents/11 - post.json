{
    "post": {
        "type": "object",
        "description": "A post/tweet in the social network",
        "properties": {
            "content": {
                "position": 0,
                "type": "string",
                "maxLength": 500,
                "minLength": 1,
                "description": "Post content"
            },
            "remix": {
                "position": 1,
                "type": "string",
                "description": "Remix content",
                "maxLength": 500,
                "minLength": 1
            },
            "mediaUrl": {
                "position": 2,
                "type": "string",
                "pattern": "^https?://.+$",
                "maxLength": 512,
                "description": "URL to media file (temporary field - will support multiple media in future)"
            },
            "language": {
                "position": 6,
                "type": "string",
                "pattern": "^[a-z]{2}$",
                "maxLength": 2,
                "description": "Language code of the post"
            },
            "sensitive": {
                "position": 7,
                "type": "boolean",
                "description": "Whether post contains sensitive content"
            },
            "quotedPostId": {
                "position": 3,
                "type": "array",
                "maxItems": 32,
                "minItems": 32,
                "byteArray": true,
                "description": "ID of quoted post",
                "contentMediaType": "application/x.dash.dpp.identifier"
            },
            "replyToPostId": {
                "position": 2,
                "type": "array",
                "maxItems": 32,
                "minItems": 32,
                "byteArray": true,
                "description": "ID of post this is replying to",
                "contentMediaType": "application/x.dash.dpp.identifier"
            },
            "firstMentionId": {
                "position": 4,
                "type": "array",
                "maxItems": 32,
                "minItems": 32,
                "byteArray": true,
                "description": "First mentioned user ID (temporary field - will support multiple mentions in future)",
                "contentMediaType": "application/x.dash.dpp.identifier"
            },
            "primaryHashtag": {
                "position": 5,
                "type": "string",
                "pattern": "^[a-zA-Z0-9_]{1,100}$",
                "maxLength": 100,
                "description": "Primary hashtag for the post (temporary field - will support multiple hashtags in future)"
            }
        },
        "indices": [
            {
                "name": "ownerAndTime",
                "properties": [
                    {
                        "$ownerId": "asc"
                    },
                    {
                        "$createdAt": "asc"
                    }
                ]
            },
            {
                "name": "timeline",
                "properties": [
                    {
                        "$createdAt": "asc"
                    }
                ]
            },
            {
                "name": "replyToPost",
                "properties": [
                    {
                        "replyToPostId": "asc"
                    },
                    {
                        "$createdAt": "asc"
                    }
                ]
            }
        ],
        "required": [
            "$createdAt",
            "content",
            "remix"
        ],
        "additionalProperties": false
    }
}
